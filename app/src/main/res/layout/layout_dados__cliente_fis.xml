<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dados_Cliente_fis"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobal_dados"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#4b9fed"
        app:title="MEUS DADOS"
        >

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp"
       >



        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/t_nome"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome "
            android:textSize="25dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/e_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@drawable/borda_edit"
            android:layout_marginBottom="15dp"

            />

        <TextView
            android:id="@+id/t_codigo_cli"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CÃ³digo do Cliente"
            android:textSize="25dp"
            android:layout_marginBottom="15dp"
            />

        <EditText
            android:id="@+id/e_codigo_cli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@drawable/borda_edit"
            android:layout_marginBottom="15dp"/>


        <TextView
            android:id="@+id/t_cpf"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF "
            android:textSize="25dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/e_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@drawable/borda_edit"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:id="@+id/t_rg"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RG "
            android:textSize="25dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/e_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@drawable/borda_edit"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/t_cnh"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CNH "
            android:textSize="25dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/e_cnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@drawable/borda_edit"/>






    </LinearLayout>

</LinearLayout>
</ScrollView>