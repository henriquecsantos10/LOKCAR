<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dados_Cliente_fis"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobal_meus_dados"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#4b9fed"
        app:title="MEUS DADOS"
        >

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp"
       >




        <EditText
            android:id="@+id/e_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:background="@drawable/borda_edit"
            android:layout_marginBottom="40dp"
            android:hint="Nome"
            />



        <EditText
            android:id="@+id/e_codigo_cli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:background="@drawable/borda_edit"
            android:layout_marginBottom="40dp"
            android:hint="CÃ³digo"/>



        <EditText
            android:id="@+id/e_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:background="@drawable/borda_edit"
            android:layout_marginBottom="40dp"
            android:hint="CPF"
            />

        <EditText
            android:id="@+id/e_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:background="@drawable/borda_edit"
            android:layout_marginBottom="40dp"
            android:hint="RG"/>


        <EditText
            android:id="@+id/e_cnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:background="@drawable/borda_edit"
            android:hint="CNH"
            android:layout_marginBottom="40dp"/>







    </LinearLayout>

</LinearLayout>
</ScrollView>